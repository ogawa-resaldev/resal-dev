<div class="table-row nested-fields">
  <div class="table-cell px-6 py-3 text-center whitespace-nowrap text-sm font-medium text-gray-800 dark:text-neutral-200">
    <%= f.hidden_field :user_id, class: "py-3 px-4 pe-9 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600", readonly: true %>
    <%= f.text_field :register_user, class: "w-full py-3 px-4 pe-9 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600", readonly: true %>
    <%= render 'shared/error_messages', object: f.object %>
  </div>
  <div class="table-cell px-6 py-3 text-center whitespace-nowrap text-sm font-medium text-gray-800 dark:text-neutral-200">
    <%= f.collection_select :rank_id, Rank.all, :id, :name, {include_blank: '指定なし'}, {class: "py-3 px-4 pe-9 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600"} %>
  </div>
  <div class="table-cell px-6 py-3 text-center whitespace-nowrap text-sm font-medium text-gray-800 dark:text-neutral-200">
    <%= link_to_remove_association "削除", f, class:"py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-red-500 text-white hover:bg-red-600 disabled:opacity-50 disabled:pointer-events-none" %>
  </div>
</div>
