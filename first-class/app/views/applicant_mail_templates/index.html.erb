<script>
// メールテンプレートのプレビュータブを押下した際に、プレビューを更新
async function update_preview(applicant_mail_template_id) {
  var mailParams = {}
  const subject = document.getElementById('applicant_mail_template_mail_template_subject_' + applicant_mail_template_id);
  const body = document.getElementById('applicant_mail_template_mail_template_body_' + applicant_mail_template_id);
  mailParams.applicantName = "○○"
  mailParams.interviewDatetime = "○/○ ○時○分"
  mailParams.interviewerName = "<%= session[:user_name] %>"
  mailParams.professionalName = "○○"
  mailParams.senderName = "<%= session[:user_name] %>"

  const ApplicantMailTemplate = await new Promise((resolve, reject) => {
      axios
      .post('/api/v1/mail_templates/create_applicant_mail', {
        subject: subject.value,
        body: body.value,
        mailParams:mailParams
      })
      .then((res) => {
        resolve(res.data);
      })
      .catch((e) => {
        reject(e)
      })
    });

  const subjectPreview = document.getElementById('applicant_mail_template_preview_mail_template_subject_' + applicant_mail_template_id);
  const bodyPreview = document.getElementById('applicant_mail_template_preview_mail_template_body_' + applicant_mail_template_id);
  subjectPreview.innerHTML = ApplicantMailTemplate.subject;
  bodyPreview.innerHTML = ApplicantMailTemplate.body.replace(/\r?\n/g, "<br>");
}
</script>
