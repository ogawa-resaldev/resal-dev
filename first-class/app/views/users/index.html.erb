<div class="flex flex-col">
  <div class="overflow-x-auto">
    <div class="min-w-full align-middle">
      <div class="border rounded-lg divide-y divide-gray-200 dark:border-gray-700 dark:divide-gray-700">
        <div class="tabs">
          <div class="border-b border-gray-200 dark:border-neutral-700">
            <nav class="flex space-x-1 overflow-x-auto" aria-label="Tabs" role="tablist">
              <% role_tabs = @users.sort_by(&:user_role_id).group_by(&:user_role_id) %>
              <% role_tabs.keys.each_with_index do |role_id, index| %>
                <button type="button" class="hs-tab-active:font-semibold hs-tab-active:border-blue-600 hs-tab-active:text-blue-600 py-4 px-1 inline-flex items-center gap-x-2 border-b-2 border-transparent text-sm whitespace-nowrap text-gray-500 hover:text-blue-600 focus:outline-none focus:text-blue-600 disabled:opacity-50 disabled:pointer-events-none dark:text-neutral-400 dark:hover:text-blue-500 <%= 'active' if index == 0 %>" id="tabs-with-underline-item-<%= role_id %>" data-hs-tab="#tabs-with-underline-<%= role_id %>" aria-controls="tabs-with-underline-<%= role_id %>" role="tab">
                  <%= @user_role_list[role_id] %>
                </button>
              <% end %>
            </nav>
          </div>
        </div>

        <div class="mt-3">
          <% role_tabs.each_with_index do |(role_id, users), index| %>
            <div id="tabs-with-underline-<%= role_id %>" class="<%= 'hidden' unless index == 0 %>" role="tabpanel" aria-labelledby="tabs-with-underline-item-<%= role_id %>">
              <div class="overflow-x-auto">
                <% if role_id == 1 %>
                  <div class="p-4">
                    <input type="text"
                      id="therapistSearchInput"
                      placeholder="セラピスト名、自動補完を検索"
                      class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
                    >
                  </div>
                <% end %>
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                  <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                      <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">ユーザー名</th>
                      <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">ログインID</th>
                      <% if session[:user_role_id] != 1 && role_id == 3 %>
                        <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">店舗グループ</th>
                      <% elsif role_id == 1 %>
                        <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">ランク</th>
                        <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">所属店舗</th>
                        <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">新人<br />バック率</th>
                        <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">帝コイン</th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">実績</th>
                      <% end %>
                      <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">修正</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    <% users.each do |user| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
                        <%= user.name %>
                        <% if role_id == 1 %>
                          <p hidden>
                            <%= user.user_therapist_setting.auto_complete %>
                          </p>
                        <% end %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200"><%= user.login_id %></td>
                      <% if session[:user_role_id] != 1 && role_id == 3 %>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200"><%= user.back_office_group.store_group.name %></td>
                      <% elsif role_id == 1 %>
                        <% if user.user_therapist_setting.rank != nil %>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200"><%= user.user_therapist_setting.rank.name %></td>
                        <% else %>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200"></td>
                        <% end %>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
                          <% if user.user_therapists.count == 0 %>
                            <div class="mt-2 text-sm text-red-700 dark:text-red-400">
                              未所属
                            </div>
                          <% else %>
                            <% user.user_therapists.order("store_id ASC").each do |user_therapist| %>
                              <%= user_therapist.store.store_name %><br />
                            <% end %>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
                          <% if user.user_therapist_setting.new_face %>
                            <div class="fa fa-leaf"><div>
                          <% end %>
                          <%= user.user_therapist_setting.therapist_back_ratio %> %
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200"><%= user.user_therapist_setting.mikado_coin_balance %> コイン</td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                          <a class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="/achievement/<%= user.id %>">
                            実績
                          </a>
                        </td>
                      <% end %>
                      <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                        <a class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="/users/<%= user.id %>/edit">
                          修正
                        </a>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('therapistSearchInput');

  searchInput.addEventListener('input', function(e) {
    const searchText = e.target.value.toLowerCase();
    const tables = document.querySelectorAll('tbody');

    tables.forEach(function(tbody) {
      const rows = tbody.querySelectorAll('tr');

      rows.forEach(function(row) {
        console.log(row.querySelector('td'))
        console.log(row.querySelector('td').textContent.toLowerCase());
        const userName = row.querySelector('td').textContent.toLowerCase();

        if (userName.includes(searchText)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });

      // 検索結果が0件の場合のメッセージ表示（オプション）
      const visibleRows = Array.from(rows).filter(row => row.style.display !== 'none');
      const noResultsRow = tbody.querySelector('.no-results');

      if (visibleRows.length === 0) {
        if (!noResultsRow) {
          const tr = document.createElement('tr');
          tr.className = 'no-results';
          tr.innerHTML = `
            <td colspan="8" class="px-6 py-4 text-center text-sm text-gray-500 dark:text-gray-400">
              "${searchText}" に一致する結果が見つかりません
            </td>
          `;
          tbody.appendChild(tr);
        }
      } else if (noResultsRow) {
        noResultsRow.remove();
      }
    });
  });

  // タブ切り替え時に検索をリセット
  const tabButtons = document.querySelectorAll('[data-hs-tab]');
  tabButtons.forEach(button => {
    button.addEventListener('click', function() {
      searchInput.value = '';
      const event = new Event('input');
      searchInput.dispatchEvent(event);
    });
  });
});
</script>
