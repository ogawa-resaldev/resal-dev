<div class="flex flex-col">
  <div class="overflow-x-auto">
    <div class="min-w-full align-middle">
      <% if flash[:error] %>
        <div class="mt-2 text-sm text-red-700 dark:text-red-400">
          <p class="alert alert-danger"><%= flash[:error] %></p>
        </div>
      <% end %>
      <div class="border rounded-lg divide-y divide-gray-200 dark:border-gray-700 dark:divide-gray-700">
        <div class="tabs">
          <div class="border-b border-gray-200 dark:border-neutral-700">
            <nav class="flex space-x-1 overflow-x-auto" aria-label="Tabs" role="tablist">
              <% @unlinked_therapists.keys.each_with_index do |store_id, index| %>
                <button type="button" class="hs-tab-active:font-semibold hs-tab-active:border-blue-600 hs-tab-active:text-blue-600 py-4 px-1 inline-flex items-center gap-x-2 border-b-2 border-transparent text-sm whitespace-nowrap text-gray-500 hover:text-blue-600 focus:outline-none focus:text-blue-600 disabled:opacity-50 disabled:pointer-events-none dark:text-neutral-400 dark:hover:text-blue-500 <%= 'active' if index == 0 %>" id="tabs-with-underline-item-<%= store_id %>" data-hs-tab="#tabs-with-underline-<%= store_id %>" aria-controls="tabs-with-underline-<%= store_id %>" role="tab">
                  <%= @unlinked_therapists[store_id][:name] %>
                </button>
              <% end %>
            </nav>
          </div>
        </div>

        <div class="mt-3">
          <% @unlinked_therapists.each_with_index do |(store_id, store_data), index| %>
            <div id="tabs-with-underline-<%= store_id %>" class="<%= 'hidden' unless index == 0 %>" role="tabpanel" aria-labelledby="tabs-with-underline-item-<%= store_id %>">
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                  <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                      <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">セラピスト名</th>
                      <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">セラピストページ</th>
                      <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">紐づける</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    <% store_data[:therapist].each do |therapist_id, therapist_data| %>
                      <tr class="therapist-row">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200 therapist-name">
                          <%= therapist_data[:name] %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
                          <%= form_with url: word_press_therapists_path, method: :post, class: "link-form" do |f| %>
                            <a href=<%= therapist_data[:link] %> target="_blank">
                              <%= therapist_data[:link] %>
                            </a>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                          <button type="button"
                            onclick="openLinkModal(<%= store_id %>, '<%= store_data[:name] %>', <%= therapist_id %>, '<%= therapist_data[:name] %>')"
                            class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none link-button">
                            紐づける
                          </button>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 紐付けmodalの定義。 -->
<%= form_with url: "/word_press_therapists/link", method: :post, class: "link-form", local: true do |form| %>
  <div id="hs-vertically-centered-link-modal" class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto pointer-events-none">
    <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto min-h-[calc(100%-3.5rem)] flex items-center">
      <div class="w-full flex flex-col bg-white border shadow-sm rounded-xl pointer-events-auto dark:bg-gray-800 dark:border-gray-700 dark:shadow-slate-700/[.7] modal-content">
        <div class="flex justify-between items-center py-3 px-4 border-b dark:border-gray-700">
          <%= form.hidden_field :store_id, name: "store_id" %>
          <%= form.hidden_field :word_press_therapist_id, name: "word_press_therapist_id" %>
          <%= form.submit "紐付け", onClick: "return check('紐付けしますか？','link-word-press-therapist')", class: "py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none",id:"link-word-press-therapist" %>
          <button type="button" class="flex justify-center items-center size-7 text-sm font-semibold rounded-full border border-transparent text-gray-800 hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white dark:hover:bg-gray-700" data-hs-overlay-close="#hs-vertically-centered-link-modal">
            <span class="sr-only">Close</span>
            <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 6 6 18"></path>
              <path d="m6 6 12 12"></path>
            </svg>
          </button>
        </div>
        <div class="flex justify-start dark:border-neutral-700">
          <p id="store_name" class="text-gray-800 dark:text-gray-400">
          </p>
        </div>
        <div class="flex justify-start dark:border-neutral-700">
          <p id="word_press_therapist_name" class="text-gray-800 dark:text-gray-400">
          </p>
        </div>
        <br />
        <div class="flex justify-start dark:border-neutral-700">
          ユーザー：
          <div id="therapist-autocomplete"></div>
        </div>
        <div class="flex justify-start dark:border-neutral-700">
          通知グループID：
          <%= form.text_field :notification_group_id, name: "notification_group_id", class: "py-3 px-4 pe-9 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600", autocomplete: "off" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= javascript_include_tag('therapist_autocomplete') %>

<script>
  // セラピスト名の自動補完
  createTherapistAutocomplete()
  updateTherapistAutocompleteList(`<%= @therapist_autocomplete %>`)


  function openLinkModal(store_id, store_name, word_press_therapist_id, word_press_therapist_name) {
    linkModal = document.getElementById("hs-vertically-centered-link-modal");
    linkModal.querySelector("#store_id").value = store_id
    linkModal.querySelector("#word_press_therapist_id").value = word_press_therapist_id
    document.getElementById("store_name").innerHTML = "店舗：" + store_name
    document.getElementById("word_press_therapist_name").innerHTML = "セラピスト：" + word_press_therapist_name

    HSOverlay.open(document.getElementById('hs-vertically-centered-link-modal'));
  }
</script>