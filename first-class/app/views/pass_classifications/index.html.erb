<script>
// 費用追加時に、defaultを反映
document.querySelectorAll('[id^="pass_classification_fees"]').forEach(function(node){
  const passClassificationFeeName = document.getElementById("pass_classification_fee_name_" + node.id.split("_")[3])
  const passClassificationFeeAmount = document.getElementById("pass_classification_fee_amount_" + node.id.split("_")[3])
  const passClassificationFeeAnnotation = document.getElementById("pass_classification_fee_annotation_" + node.id.split("_")[3])
  node.addEventListener('cocoon:after-insert', function(e){
    targetNodes = e.srcElement.children[e.srcElement.children.length - 1].children
    targetNodes[0].children[0].value = passClassificationFeeName.value
    targetNodes[1].children[0].value = passClassificationFeeAmount.value
    targetNodes[2].children[0].value = passClassificationFeeAnnotation.value
  })
})


// メールテンプレートのプレビュータブを押下した際に、プレビューを更新
async function update_preview(pass_classification_id) {
  const subjectPreview = document.getElementById('pass_classification_preview_mail_template_subject_' + pass_classification_id);
  const bodyPreview = document.getElementById('pass_classification_preview_mail_template_body_' + pass_classification_id);
  const subject = document.getElementById('pass_classification_mail_template_subject_' + pass_classification_id).value;
  const body = document.getElementById('pass_classification_mail_template_body_' + pass_classification_id).value;
  mailParams = {}
  mailParams.passClassificationName = document.getElementById('pass_classification_classification_name_' + pass_classification_id).value;
  mailParams.applicantName = '○○'
  mailParams.senderName = '<%= session[:user_name] %>'
  passClassificationFees = []
  Array.from(document.getElementById('pass_classification_fees_' + pass_classification_id).children).forEach(
    function(passClassificationFee) {
      if (passClassificationFee.tagName == "DIV") {
          passClassificationFees.push(
            {
              fee_name: passClassificationFee.children[0].children[0].value,
              amount: passClassificationFee.children[1].children[0].value,
              annotation: passClassificationFee.children[2].children[0].value
            }
          )
      }
    }
  )
  mailParams.passClassificationFees = passClassificationFees

  applicantMail = await createApplicantMail(subject, body, mailParams)

  subjectPreview.innerHTML = applicantMail.subject
  bodyPreview.innerHTML = applicantMail.body.replace(/\n/g, '<br>') // 改行を<br>に変換して表示(元の値は変更しない)
}


// メールテンプレートのルールを表示/非表示
function toggleAccordion(contentId, btnId) {
  const el = document.getElementById(contentId);
  const btn = document.getElementById(btnId);
  el.classList.toggle('hidden');
  if (el.classList.contains('hidden')) {
    btn.textContent = 'ルールを見る';
  } else {
    btn.textContent = 'ルールを閉じる';
  }
}


async function createApplicantMail(subject, body, mailParams) {
  return new Promise((resolve, reject) => {
    axios
    .post('/api/v1/mail_templates/create_applicant_mail', {
      subject: subject,
      body: body,
      mailParams: mailParams
    })
    .then((res) => {
      resolve(res.data);
    })
    .catch((e) => {
      reject(e)
    })
  });
}
</script>
