</html>

<script>
  timeoutSetter('flash-alert', 5000);
  timeoutSetter('flash-notice', 3000);

  function timeoutSetter(elementId, time) {
    setTimeout(function() {
      const flash = document.getElementById(elementId);
      if (flash) {
        flash.style.opacity = '0';
        flash.style.transform = 'translate(-50%, -100%)';
        setTimeout(function() {
          flash.remove();
        }, 300);
      }
    }, time);
  }
</script>
